<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/hotelbackground1"
    tools:context="com.freego.activity.MyHotelActivity">

    <LinearLayout
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <FrameLayout
            android:id="@+id/hotel_home"
            android:background="#bb000000"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/hotel_home_image"
                android:src="@drawable/personal_home_buttonstates"
                android:background="#00000000"
                android:layout_width="49dp"
                android:layout_height="49dp"
                android:scaleType="centerInside"
                android:layout_gravity="center_horizontal|center_vertical" />
            <TextView
                android:id="@+id/hotel_home_text"
                android:layout_marginBottom="35dp"
                android:layout_gravity="bottom|center"
                android:text="Home"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:background="#00000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>
        <TextView
            android:background="#ffffff"
            android:layout_width="1dp"
            android:layout_height="match_parent" />
        <FrameLayout
            android:id="@+id/hotel_follower"
            android:background="#bb000000"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/hotel_follower_image"
                android:src="@drawable/personal_follower_buttonstates"
                android:background="#00000000"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:scaleType="centerInside"
                android:layout_gravity="center_horizontal|center_vertical"/>
            <TextView
                android:id="@+id/hotel_follower_text"
                android:layout_marginBottom="35dp"
                android:layout_gravity="bottom|center"
                android:text="Follower"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:background="#00000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_weight="1.2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/hotel_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Hotel"
            android:textSize="40sp"
            android:textColor="#ffffff"
            android:layout_marginLeft="110dp"
            android:longClickable="false" />

        <ImageButton
            android:id="@+id/host_logout"
            android:background="#00000000"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/public_logout"
            android:scaleType="centerInside"
            android:layout_toRightOf="@+id/hotel_title"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="65dp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <FrameLayout
            android:id="@+id/hotel_recruitment"
            android:background="#bb000000"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/hotel_recruitment_image"
                android:background="#00000000"
                android:src="@drawable/personal_profile_buttonstates"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:scaleType="centerInside"
                android:layout_gravity="center_horizontal|center_vertical"/>
            <TextView
                android:id="@+id/hotel_recruitment_text"
                android:layout_marginBottom="35dp"
                android:layout_gravity="bottom|center"
                android:text="Recruitment"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:background="#00000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>
        <TextView
            android:background="#ffffff"
            android:layout_width="1dp"
            android:layout_height="match_parent" />
        <FrameLayout
            android:id="@+id/hotel_message"
            android:background="#bb000000"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/hotel_message_image"
                android:background="#00000000"
                android:src="@drawable/personal_message_buttonstates"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:scaleType="centerInside"
                android:layout_gravity="center_horizontal|center_vertical"/>
            <TextView
                android:id="@+id/hotel_message_text"
                android:layout_marginBottom="35dp"
                android:layout_gravity="bottom|center"
                android:text="Message"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:background="#00000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>
    </LinearLayout>

</LinearLayout>
