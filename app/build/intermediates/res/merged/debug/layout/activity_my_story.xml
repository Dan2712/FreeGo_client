<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/storybackground"
    tools:context="com.freego.activity.MyHotelActivity">

    <LinearLayout
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <FrameLayout
            android:id="@+id/story_home"
            android:background="#bb000000"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" >
            <ImageButton
                android:id="@+id/story_home_image"
                android:src="@drawable/personal_home_buttonstates"
                android:background="#00000000"
                android:layout_width="49dp"
                android:layout_height="49dp"
                android:scaleType="centerInside"
                android:layout_gravity="center_horizontal|center_vertical" />
            <TextView
                android:id="@+id/story_home_text"
                android:layout_marginBottom="35dp"
                android:layout_gravity="bottom|center"
                android:text="Home"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:background="#00000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>
        <TextView
            android:background="#ffffff"
            android:layout_width="1dp"
            android:layout_height="match_parent" />
        <FrameLayout
            android:id="@+id/story_favourite"
            android:background="#bb000000"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/story_favourite_image"
                android:src="@drawable/personal_favourivte_buttonstates"
                android:background="#00000000"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:scaleType="centerInside"
                android:layout_gravity="center_horizontal|center_vertical"/>
            <TextView
                android:id="@+id/story_favourite_text"
                android:layout_marginBottom="35dp"
                android:layout_gravity="bottom|center"
                android:text="Favourite"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:background="#00000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_weight="1.2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/hotel_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Story"
            android:textSize="40sp"
            android:textColor="#ffffff"
            android:layout_marginLeft="113dp"
            android:longClickable="false" />

        <ImageButton
            android:id="@+id/volunteer_logout"
            android:background="#00000000"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/public_logout"
            android:scaleType="centerInside"
            android:layout_toRightOf="@+id/hotel_title"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="63dp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <FrameLayout
            android:id="@+id/story_notes"
            android:background="#bb000000"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/story_notes_image"
                android:background="#00000000"
                android:src="@drawable/personal_profile_buttonstates"
                android:layout_width="41dp"
                android:layout_height="41dp"
                android:scaleType="centerInside"
                android:layout_marginBottom="2dp"
                android:layout_gravity="center_horizontal|center_vertical"/>
            <TextView
                android:id="@+id/story_notes_text"
                android:layout_marginBottom="35dp"
                android:layout_gravity="bottom|center"
                android:text="Notes"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:background="#00000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>
        <TextView
            android:background="#ffffff"
            android:layout_width="1dp"
            android:layout_height="match_parent" />
        <FrameLayout
            android:id="@+id/story_message"
            android:background="#bb000000"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/story_message_image"
                android:background="#00000000"
                android:src="@drawable/personal_message_buttonstates"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:scaleType="centerInside"
                android:layout_marginTop="3dp"
                android:layout_gravity="center_horizontal|center_vertical"/>
            <TextView
                android:id="@+id/story_message_text"
                android:layout_marginBottom="35dp"
                android:layout_gravity="bottom|center"
                android:text="Message"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:background="#00000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>
    </LinearLayout>

</LinearLayout>
