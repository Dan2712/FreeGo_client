<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/homepage_note_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:paddingLeft="10dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:textColor="#ff4045"
        android:gravity="center_vertical"
        android:background="@drawable/public_titleback"/>

    <ImageView
        android:id="@+id/homepage_note_title_destination"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/homepage_note_title"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"/>

    <TextView
        android:id="@+id/homepage_note_info"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="#ffffff"
        android:textSize="17sp"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:layout_alignBottom="@id/homepage_note_title_destination"
        android:background="#99000000"/>

    <TextView
        android:id="@+id/homepage_clicks"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="331"
        android:textSize="17sp"
        android:gravity="center_vertical"
        android:textColor="#ffffff"
        android:layout_alignBottom="@id/homepage_note_title_destination"
        android:layout_alignRight="@id/homepage_note_title_destination"
        android:layout_marginBottom="9dp"
        android:paddingRight="10dp"/>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="10dp"
        android:src="@drawable/public_eye"
        android:layout_alignBottom="@+id/homepage_note_info"
        android:layout_toStartOf="@+id/homepage_clicks"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="5dp"/>
</RelativeLayout>