<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/hotelList_framework"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ListView
                android:id="@+id/hotelList_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </ListView>

            <ImageView
                android:layout_marginTop="23dp"
                android:layout_marginLeft="12dp"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:id="@+id/hotelList_search"
                android:background="#00000000"/>

            <RelativeLayout
                android:layout_gravity="top|right"
                android:background="#00000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.freego.view.CircleImageView
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="17dp"
                    android:layout_width="62dp"
                    android:layout_height="50dp"
                    android:src="@drawable/homepage_hotel01"
                    app:border_width="4dp"
                    app:border_color="#ffffffff"
                    android:layout_alignParentTop="true"
                    />
            </RelativeLayout>
        </FrameLayout>



        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:background="#f4f4f4"
            android:layout_gravity="start"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:textColor="#222222"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="20dp"
                    android:textSize="15dp"
                    android:background="#00000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender  "/>


                <RadioGroup
                    android:id="@+id/drawer_gender"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <RadioButton
                        android:textSize="12dp"
                        android:textColor="#ffffffff"
                        android:gravity="center"
                        android:padding="10dp"
                        android:background="@drawable/public_radiobutton_colors"
                        android:button="@null"
                        android:layout_marginRight="40dp"
                        android:id="@+id/drawer_male"
                        android:text="Male"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:checked="false" />

                    <RadioButton
                        android:textSize="12dp"
                        android:textColor="#ffffffff"
                        android:gravity="center"
                        android:padding="10dp"
                        android:background="@drawable/public_radiobutton_colors"
                        android:button="@null"
                        android:text="Female"
                        android:layout_marginRight="20dp"
                        android:id="@+id/drawer_female"
                        android:layout_width="80dp"
                        android:layout_height="40dp" />
                </RadioGroup>


                <TextView
                    android:layout_margin="20dp"
                    android:background="#66666666"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />

                <TextView
                    android:textColor="#222222"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:textSize="15dp"
                    android:background="#00000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Duration  "/>

                <LinearLayout
                    android:layout_marginLeft="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:maxLength="2"
                        android:background="@drawable/public_input"
                        android:id="@+id/weekFrom"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:numeric="integer"
                        android:singleLine="true"
                        android:gravity="center"
                        android:layout_width="80dp"
                        android:layout_height="40dp"/>

                    <TextView
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="--"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:maxLength="2"
                        android:background="@drawable/public_input"
                        android:id="@+id/weekTo"
                        android:layout_marginTop="10dp"
                        android:numeric="integer"
                        android:singleLine="true"
                        android:gravity="center"
                        android:layout_width="80dp"
                        android:layout_height="40dp"/>

                    <TextView
                        android:textColor="#222222"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:text="weeks"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <TextView
                    android:layout_margin="20dp"
                    android:background="#66666666"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />

                <TextView
                    android:textColor="#222222"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:textSize="15dp"
                    android:background="#00000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time  "/>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Spinner
                        android:dropDownWidth="180dp"
                        android:textAlignment="center"
                        android:entries="@array/years"
                        android:background="@drawable/public_input"
                        android:spinnerMode="dialog"
                        android:id="@+id/spinnerYearFrom"
                        android:layout_width="90dp"
                        android:layout_height="40dp"/>

                    <TextView
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:text="--"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"/>

                    <Spinner
                        android:dropDownWidth="180dp"
                        android:textAlignment="center"
                        android:entries="@array/months"
                        android:background="@drawable/public_input"
                        android:spinnerMode="dialog"
                        android:id="@+id/spinnerMonthFrom"
                        android:layout_width="90dp"
                        android:layout_height="40dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Spinner
                        android:dropDownWidth="180dp"
                        android:background="@drawable/public_input"
                        android:textAlignment="center"
                        android:entries="@array/years"
                        android:spinnerMode="dialog"
                        android:id="@+id/spinnerYearTo"
                        android:layout_width="90dp"
                        android:layout_height="40dp"/>

                    <TextView
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:text="--"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content" />

                    <Spinner
                        android:dropDownWidth="180dp"
                        android:background="@drawable/public_input"
                        android:textAlignment="center"
                        android:entries="@array/months"
                        android:spinnerMode="dialog"
                        android:id="@+id/spinnerMonthTo"
                        android:layout_width="90dp"
                        android:layout_height="40dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="110dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:layout_weight="1"
                        android:textColor="#ffffff"
                        android:id="@+id/drawer_confirm"
                        android:background="@drawable/public_button_click"
                        android:text="Confirm"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"/>

                    <Button
                        android:layout_weight="1"
                        android:textColor="#ffffff"
                        android:id="@+id/drawer_reset"
                        android:background="@drawable/public_button_click"
                        android:text="Reset"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


    </android.support.v4.widget.DrawerLayout>

</LinearLayout>
